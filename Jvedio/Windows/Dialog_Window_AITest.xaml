<super:BaseDialog x:Class="Jvedio.Dialog_Window_AITest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:super="https://github.com/SuperStudio/SuperControls"
        mc:Ignorable="d"
        Title="AI 功能诊断"
        Height="500"
        Width="600"
        Icon="pack://application:,,,/Resources/Jvedio.ico"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="AI 功能诊断工具" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="此工具用于诊断 AI 功能的配置和运行状态" FontSize="12" Foreground="Gray"/>
        </StackPanel>

        <!-- 结果显示 -->
        <ScrollViewer Grid.Row="1" Margin="10" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="txtResult"
                       Text="点击下方按钮开始诊断..."
                       FontFamily="Consolas"
                       FontSize="12"
                       TextWrapping="Wrap"
                       WhiteSpace="Pre"/>
        </ScrollViewer>

        <!-- 按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="btnRunDiagnostics"
                    Content="运行诊断"
                    Click="RunDiagnostics_Click"
                    MinWidth="120"
                    Margin="0,0,10,0"
                    Style="{StaticResource ButtonInfo}"/>
            <Button x:Name="btnCopyResult"
                    Content="复制结果"
                    Click="CopyResult_Click"
                    MinWidth="120"
                    Margin="0,0,10,0"
                    Style="{StaticResource ButtonSuccess}"/>
            <Button x:Name="btnClose"
                    Content="关闭"
                    Click="Close_Click"
                    MinWidth="120"
                    Style="{StaticResource ButtonInfo}"/>
        </StackPanel>
    </Grid>
</super:BaseDialog>
